{
  "name": "ywst-monorepo",
  "version": "1.0.0",
  "workspaces": [
    "./apps/web"
  ],
  "author": "fullsnac-js",
  "license": "ISC",
  "scripts": {
    "dev:web": "npm run dev -w @ywst/web",
    "dev:studio": "cd apps/studio && npm run dev",
    "dev": "npm-run-all -p dev:studio dev:web",
    "lint": "npm run lint-staged -w @ywst/web"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "simple-git-hooks": "^2.7.0"
  },
  "simple-git-hooks": {
    "pre-commit": "npm run lint"
  }
}
